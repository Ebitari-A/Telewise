<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a
      class="nav-link active"
      id="shows-tab"
      data-toggle="tab"
      href="#shows"
      role="tab"
      aria-controls="shows"
      aria-selected="true"
      >My Shows</a
    >
  </li>
  <li class="nav-item" role="presentation">
    <a
      class="nav-link"
      id="reviews-tab"
      data-toggle="tab"
      href="#reviews"
      role="tab"
      aria-controls="reviews"
      aria-selected="false"
      >My Reviews</a
    >
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div
    class="tab-pane fade show active"
    id="shows"
    role="tabpanel"
    aria-labelledby="shows-tab"
  >
    <%= render :partial => 'shared/my_show_cards' %>
  </div>

  <div
    class="tab-pane fade"
    id="reviews"
    role="tabpanel"
    aria-labelledby="reviews-tab"
  >
    <%= render :partial => 'shared/my_reviews' %>
  </div>
</div>
