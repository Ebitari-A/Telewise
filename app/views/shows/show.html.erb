<div class="text-white">
  <div class="container py-3">
    <div class="row">
      <div class="col-md-4">
        <img
          src="https://images2.minutemediacdn.com/image/upload/c_crop,h_358,w_640,x_0,y_29/f_auto,q_auto,w_1100/v1554990347/shape/mentalfloss/breakhed.jpg"
          alt=""
          class="w-100 rounded"
        />
      </div>
      <div class="col-md-8">
        <h1><%= @show.name %></h1>
        <p class="hover-3-rating small text-uppercase mb-0">
          <%= '⭐' * (@show.rating.round / 2) %>
        </p>
        <p><%= @show.summary %></p>
        <p>Seasons: <%= @show.number_of_seasons %></p>
        <%= link_to 'Add to my shows', show_path(@show), class: "btn
        btn-success" %>
      </div>
    </div>
  </div>
</div>


<% count = 1 %> <% @show.number_of_seasons.times do %>
<div class="container border rounded p-3 mb-3 mt-4 text-white">
  <div class="progress">
    <div
      class="progress-bar"
      role="progress-bar"
      aria-valuenow="70"
      aria-valuemin="0"
      aria-valuemax="100"
      style="width: 30%"
    ></div>
  </div>
  <p><strong>Season <%= count %></strong></p>
  <p><small><%= @show.summary %></small></p>
  <p>
    <%= link_to 'Details', show_path(@show, season: count), class: "btn
    btn-success" %>
  </p>
</div>
<% count += 1 %> <% end %> <%#
